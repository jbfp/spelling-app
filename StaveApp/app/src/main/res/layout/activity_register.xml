<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.jbfp.staveapp.register.RegisterActivity">

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textCapWords|textNoSuggestions"
        android:hint="Navn"/>

    <ImageButton
        android:id="@+id/photo_image_button"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:src="@drawable/ic_face_black_48dp"
        android:onClick="onTakePhotoButtonClick" />
    
    <Button
        android:id="@+id/save_button"
        android:enabled="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gem"
        android:onClick="onSaveButtonClick" />

</LinearLayout>
